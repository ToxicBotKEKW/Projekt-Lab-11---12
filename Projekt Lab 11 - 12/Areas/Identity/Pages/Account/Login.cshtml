@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login-site.css"/>
}

<div class="form-container">
    <section class="dark-form">
        <form id="account" method="post">
            <h2>Logowanie</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="custom-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password">Hasło</label>
                <input asp-for="Input.Password" class="custom-input" autocomplete="current-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="validation-error"></span>
            </div>

            <div class="form-group checkbox-group">
                <input asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
            </div>

            <div class="form-group">
                <button id="login-submit" type="submit" class="custom-button">Zaloguj się</button>
            </div>

            <div class="form-links">
                <p><a id="forgot-password" asp-page="./ForgotPassword">Zresetuj hasło</a></p>
                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a></p>
                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij ponownie potwierdzenie e-mail</a></p>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
