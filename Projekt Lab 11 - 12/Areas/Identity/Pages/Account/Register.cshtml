@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/register-site.css" />
}

<div class="form-container">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="dark-form">
        <h2>Utwórz nowe konto</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

        <div class="form-group">
            <label asp-for="Input.Email">Email</label>
            <input asp-for="Input.Email" class="custom-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password">Hasło</label>
            <input asp-for="Input.Password" class="custom-input" autocomplete="new-password" aria-required="true" placeholder="password" />
            <span asp-validation-for="Input.Password" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.ConfirmPassword">Potwierdź hasło</label>
            <input asp-for="Input.ConfirmPassword" class="custom-input" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
            <span asp-validation-for="Input.ConfirmPassword" class="validation-error"></span>
        </div>

        <div class="form-group">
            <button id="registerSubmit" type="submit" class="custom-button">Zarejestruj się</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
